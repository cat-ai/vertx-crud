<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.cat.ai</groupId>
  <artifactId>VertxCrud</artifactId>
  <version>0.0.1</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>io.cat.ai.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.18.6</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <lombok.version>1.18.6</lombok.version>
    <netty.version>4.1.29.Final</netty.version>
    <postgres.version>42.2.5</postgres.version>
    <maven.compiler.target>8</maven.compiler.target>
    <reactive-pg-client.version>0.11.3</reactive-pg-client.version>
    <vertx.version>3.5.4</vertx.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <vertx-pg-client.version>0.3.0</vertx-pg-client.version>
    <jackson.version>2.9.7</jackson.version>
    <typesafe-config.version>1.3.3</typesafe-config.version>
    <maven.compiler.source>8</maven.compiler.source>
  </properties>
</project>

